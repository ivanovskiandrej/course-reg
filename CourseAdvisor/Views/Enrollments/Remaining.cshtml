@model List<List<CourseAdvisor.Models.Course>>
@{
    ViewBag.Title = "Remaining Courses";
}

<h2>Advise</h2>

<table class="table">
    @foreach (var list in Model)
    {
    <tr>
        <th>
            @Html.DisplayNameFor(model => list[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => list[0].Credits)
        </th>
        <th>
            @Html.DisplayNameFor(model => list[0].Required)
        </th>
        <th>
            @Html.DisplayNameFor(model => list[0].Elective)
        </th>
        <th>
            @Html.DisplayNameFor(model => list[0].GenEd)
        </th>
        <th></th>
    </tr>
    
    
        foreach (var item in list)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Required)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elective)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenEd)
            </td>
        </tr>
        }
    }

</table>
