@model IEnumerable<CourseAdvisor.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2 style="
  font-size: 3em;
  font-family: 'IM Fell Great Primer';
  position: relative;
  color: #000000;
  text-align:center;

    ">
    Enrollments
</h2>
@if (!this.User.IsInRole("Admin"))
{
    <p style="text-align:center;">This is a list of all courses that you have taken. In order to enroll in a course, click on "New Enrollment"</p>
}
<p>
    @Html.ActionLink("New Enrollment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentId }) |
            </td>
        </tr>
    }

</table>
